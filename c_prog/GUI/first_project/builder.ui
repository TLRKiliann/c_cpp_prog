<interface>
  <object id="window" class="GtkWindow">
    <property name="visible">True</property>
    <property name="title">My GTK Window</property>
    <property name="border-width">10</property>
    <property name="default_width">600</property> 
    <property name="default_height">400</property> 
    <child>
      <object id="grid" class="GtkGrid">
        <property name="visible">True</property>
        <property name="column-spacing">10</property>
        <property name="row-spacing">10</property>
        <property name="halign">center</property>
        <property name="valign">center</property>
	      <child>
          <object class="GtkLabel" id="label0">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="label" translatable="yes">Display in console</property>
	        </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">0</property>
            <property name="width">2</property>
	        </packing>
      	</child>
        <child>
          <object id="button1" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">Button 1</property>
          </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">1</property>
          </packing>
        </child>
        <child>
          <object id="testbtn" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">testbtn</property>
          </object>
          <packing>
            <property name="left-attach">1</property>
            <property name="top-attach">1</property>
          </packing>
        </child>
	      <child>
          <object class="GtkLabel" id="label1">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="label" translatable="yes">Label Text Here</property>
	        </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">2</property>
            <property name="width">2</property>
	        </packing>
      	</child>
	      <child>
          <object class="GtkLabel" id="label2">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="label" translatable="yes">Label Text 2 Here</property>
	        </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">3</property>
            <property name="width">2</property>
	        </packing>
	      </child>
	      <child>
          <object class="GtkEntry" id="entry1">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="text">Placeholder text</property>
          </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">4</property> <!-- placer l'étiquette à la fin de la GtkBox -->
	        </packing>
	      </child>
	      <child>
	        <object class="GtkButton" id="display_text_button">
            <property name="label">Display Text</property>
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <property name="receives_default">True</property>
          </object>
          <packing>
            <property name="left-attach">1</property>
            <property name="top-attach">4</property>
	        </packing>
        </child>
        <child>
          <object class="GtkLabel" id="display_label">
            <property name="visible">True</property>
            <property name="label">Texte affiché ici</property>
          </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">5</property>
            <property name="width">2</property>
	        </packing>
	      </child>
        <child>
          <object id="quit" class="GtkButton">
            <property name="visible">True</property>
            <property name="label">Quit</property>
          </object>
          <packing>
            <property name="left-attach">0</property>
            <property name="top-attach">6</property>
            <property name="width">2</property>
          </packing>
        </child>
	    </object>
    </child>
  </object>
</interface>
